				<li><%= link_to "Gallery", 'gallery' %></li>
				<li><%= link_to "About Us", 'about_us' %></li>
         	</ul>
  	  	</div><!-- end .sidebar1 -->
	  	<div class="content">
        	<%= yield %>
	  	</div><!-- end .content -->
  	  	<div class="sidebar2">
        	<ul class="nav">
          		<li><%= link_to "Links", 'links' %></li>
